{
    "compilerOptions": {
        // "typeRoots": ["./typings", "./node_modules/@types"],
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "jsx": "react",
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": "./",
        "strict": true,
        "paths": {
            "@/*": ["src/*"],
            "@@/*": ["src/.umi/*"],
            "demo": ["src/demo/index.ts"],
            "hooks": ["src/components/hooks"],
            "assets": ["src/assets"]
        },
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules",
        "lib",
        "es",
        "dist",
        "typings",
        "**/__test__",
        "test",
        "docs",
        "tests"
    ]
}
